- set page_title = 'Neurosynth Topics: ' + topic_set.name
- extends "layout/base.html"
- block content
  script type="text/javascript"
    |var topic_set = "{{topic_set.name}}";
  .row#page-analysis
    .col-md-12.content
      h1 {{topic_set.name}}
      .lead {{topic_set.description}}
      table.table-striped.table-hover.table.table-condensed#topic-set-table
        thead
          tr
            th style='width: 60px;' Topic number
            th style='width: 300px;' Top terms
            th style='width: 60px;' Num. studies