- set page_title = 'Neurosynth: FAQs'
- extends "layout/base.html"
- block content

  .row#page-faq
    .col-md-10.col-md-offset-1
      h1 Neurosynth: FAQ about Custom Analyses

      - set count = [0]
      .faq-toc
        - for s in data['sections']
          h3 {{ s['name'] }}
          ul
            - for item in s['questions']
              - set _ = count.append(count.pop()+1)
              li 
                a href="#q{{count[0]|string}}" {{ item['q'] }}

      %hr
      - set count = [0]
      .faq-contents
        - for s in data['sections']
          h3.top-space40 {{ s['name'] }}
          - for item in s['questions']
            - set _ = count.append(count.pop()+1)
            %a name="q{{count[0]|string}}"
            .faq-q {{ item['q'] }}
            .faq-a {{ item['a'] }}
